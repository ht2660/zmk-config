/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "01Studio pyBLE-NRF52840";
    compatible = "nordic,nrf52840-qiaa";

    chosen {
        zephyr,bt-uart = &uart0;
        zephyr,code-partition = &slot0_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        /* Label the native USB controller for ZMK Studio */
        zephyr,display = &blue_led; // Optional: fallback for status
    };

    leds {
        compatible = "gpio-leds";
        red_led: led_0 {
            gpios = <&gpio0 30 GPIO_ACTIVE_LOW>; // Corrected to P0.30 per schematic
            label = "Red LED";
        };
        blue_led: led_1 {
            gpios = <&gpio1 11 GPIO_ACTIVE_LOW>; // Corrected to P1.11 per schematic
            label = "Blue LED";
        };
    };

    /* vbus-detect is critical for stable ZMK USB behavior */
    vbus_detect: vbus_detect {
        compatible = "zmk,cdc-acm-vbus-detect";
    };
};

/* Hardware Peripheral Config */

&gpio0 { status = "okay"; };
&gpio1 { status = "okay"; };

&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
        label = "CDC_ACM_0";
    };
};

&pinctrl {
    uart0_default: uart0_default {
        group1 {
            psels = <NRF_PSEL(UART_TX, 0, 20)>,
                    <NRF_PSEL(UART_RX, 0, 18)>;
        };
    };

    uart0_sleep: uart0_sleep {
        group1 {
            psels = <NRF_PSEL(UART_TX, 0, 20)>,
                    <NRF_PSEL(UART_RX, 0, 18)>;
            low-power-enable;
        };
    };
};

&uart0 {
    status = "okay";
    current-speed = <115200>;
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;
    pinctrl-names = "default", "sleep";
};

/* Use the full 1MB internal flash to prevent overflows */
&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        boot_partition: partition@0 {
            label = "mcuboot";
            reg = <0x00000000 0x0000C000>;
        };
        slot0_partition: partition@c000 {
            label = "image-0";
            reg = <0x0000C000 0x000E6000>; // Maximized to 920KB
        };
        storage_partition: partition@f2000 {
            label = "storage";
            reg = <0x000F2000 0x0000E000>; // Space for ZMK Studio settings
        };
    };
};