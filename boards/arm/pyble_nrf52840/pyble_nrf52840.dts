/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
    model = "01Studio pyBLE-NRF52840";
    compatible = "nordic,nrf52840-qiaa";

    leds {
        compatible = "gpio-leds";

        red_led: led_0 {
            gpios = <&gpio1 15 GPIO_ACTIVE_LOW>;
            label = "Red LED";
        };

        blue_led: led_1 {
            gpios = <&gpio1 10 GPIO_ACTIVE_LOW>;
            label = "Blue LED";
        };
    };
};

/* Label the native USB controller for the snippet */
zephyr_udc0: &usbd {
    status = "okay";
};

&gpio0 { status = "okay"; };
&gpio1 { status = "okay"; };
&qspi { status = "disabled"; };
&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        boot_partition: partition@0 {
            label = "mcuboot";
            reg = <0x00000000 0x0000C000>;
        };
        /* Expanded this slot to 0xF0000 (960 KB) */
        slot0_partition: partition@c000 {
            label = "image-0";
            reg = <0x0000C000 0x000E4000>; 
        };
        storage_partition: partition@f0000 {
            label = "storage";
            reg = <0x000F0000 0x00010000>;
        };
    };
};